    { "key": "ctrl+p", "command": "workbench.action.quickOpenSelectPrevious", "when": "!editorTextFocus" },
    { "key": "ctrl+n", "command": "workbench.action.quickOpenSelectNext",     "when": "!editorTextFocus" },

