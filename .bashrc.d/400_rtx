# `rtx local` should use .tool-versions
export RTX_USE_TOML=0

# Make --pin the default, instead of --fuzzy
export RTX_ASDF_COMPAT=1

case $CURRENT_SHELL in
bash)
    if command -v rtx >/dev/null; then
        . <(rtx activate bash)
        . <(rtx completion bash)
    fi
    ;;
zsh)
    if command -v rtx >/dev/null; then
        . <(rtx activate zsh)
        . <(rtx completion zsh)
    fi
    ;;
esac
