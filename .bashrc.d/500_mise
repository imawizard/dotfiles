# `mise local` should use .tool-versions
export MISE_USE_TOML=0

# Make --pin the default, instead of --fuzzy
export MISE_ASDF_COMPAT=1

export MISE_STATUS_SHOW_ENV=1
export MISE_STATUS_SHOW_TOOLS=1
export MISE_RAW=1
export MISE_GO_SET_GOBIN=0

case $CURRENT_SHELL in
bash)
    if command -v mise >/dev/null; then
        . <(mise activate bash)
        . <(mise hook-env --shell bash)
        . <(mise completion bash)
    fi
    ;;
zsh)
    if command -v mise >/dev/null; then
        . <(mise activate zsh)
        . <(mise hook-env --shell zsh)
        . <(mise completion zsh)
    fi
    ;;
esac
